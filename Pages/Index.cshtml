@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Mega Desk Web Application </h1>
    <p>By Christian Mena-Osorio -- CIT 365</p>
</div>

<div id="carouselProject" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#carouselProject" data-slide-to="0" class="active"></li>
        <li data-target="#carouselProject" data-slide-to="1"></li>
        <li data-target="#carouselProject" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/css/pictures/noDrawers.jpg" class="mx-auto d-block w-75" width="480" height="300">
        </div>
        <div class="carousel-item">
            <img src="~/css/pictures/fiveDrawers.jpg" class="mx-auto d-block w-75" width="480" height="300">
        </div>
        <div class="carousel-item">
            <img src="~/css/pictures/sevenDrawers.jpg" class="mx-auto d-block w-75" width="480" height="300">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#carouselProject" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#carouselProject" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>