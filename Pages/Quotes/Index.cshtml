@model MegaDeskTeamDeseret.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Get New Quote</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-gutters color">
        <p>
            Enter Customer Last Name: <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search Quote" class="btn btn-success"/>
         </p>
    </div>
</form>
<table class="table table-info table-hover">
    <thead>
        <tr>
            <th class="m-0">
                @Html.DisplayNameFor(model => model.Quote[0].FirstName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortorder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Quote[0].LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].NumberOfDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].SurfaceMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].RushDays)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Quote[0].SubmitedDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Quote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDrawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurfaceMaterial)
            </td>
            <th>
                @Html.DisplayFor(mmodelItem => item.Area)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitedDate)
            </td>
            <td>
               $ @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
