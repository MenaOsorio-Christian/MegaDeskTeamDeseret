@page
@model MegaDeskTeamDeseret.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quote.FirstName" class="control-label"></label>
                <input asp-for="Quote.FirstName" class="form-control" />
                <span asp-validation-for="Quote.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.LastName" class="control-label"></label>
                <input asp-for="Quote.LastName" class="form-control" />
                <span asp-validation-for="Quote.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeskWidth" class="control-label"></label>
                <input asp-for="Quote.DeskWidth" class="form-control" />
                <span asp-validation-for="Quote.DeskWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeskDepth" class="control-label"></label>
                <input asp-for="Quote.DeskDepth" class="form-control" />
                <span asp-validation-for="Quote.DeskDepth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.NumberOfDrawers" class="control-label"></label>
                <input asp-for="Quote.NumberOfDrawers" class="form-control" />
                <span asp-validation-for="Quote.NumberOfDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.SurfaceMaterial" class="control-label"></label>
                <select asp-for="Quote.SurfaceMaterial" class="form-control">
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                    <option value="Oak">Oak</option>
                    <option value="Pine">Pine</option>
                    <option value="Laminate">Laminate</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quote.RushDays" class="control-label"></label>
                <select id="shipping-drop-down" asp-for="Quote.RushDays" class="form-control">
                    <option value=3>3</option>
                    <option value=5>5</option>
                    <option value=7>7</option>
                    <option value=14>14</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quote.SubmitedDate" class="control-label"></label>
                <input asp-for="Quote.SubmitedDate" class="form-control" />
                <span asp-validation-for="Quote.SubmitedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
